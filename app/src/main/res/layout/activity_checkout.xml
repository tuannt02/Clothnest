<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.CheckoutActivity">

    <RelativeLayout
        android:id="@+id/customActionBarCheckout"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <ImageView
            android:id="@+id/btnBackCheckout"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:padding="8dp"
            android:src="@drawable/ic_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/btnBackCheckout"
            android:fontFamily="@font/lato_black"
            android:padding="10dp"
            android:text="CHECKOUT"
            android:textColor="#DF7861"
            android:textSize="24sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentBottom="true"
            android:background="#E0E0E0" />

    </RelativeLayout>

    <ScrollView
        android:id="@+id/checkout_scrview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/customActionBarCheckout"
        android:background="#F9F9F9">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_radius_linear"
                android:layout_marginTop="12dp"
                android:padding="12dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_right_arrow" />

                <TextView
                    android:id="@+id/checkout_deli_addr_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_map"
                    android:drawablePadding="6dp"
                    android:fontFamily="@font/lato"
                    android:text="Delivery address"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/checkout_group_name_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/checkout_deli_addr_title"
                    android:layout_marginLeft="28dp"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/checkout_deli_addr_txt_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lato"
                        android:paddingVertical="2dp"
                        android:text="Phan Thanh Tú"
                        android:textColor="@color/black"
                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:fontFamily="@font/lato"
                        android:paddingVertical="2dp"
                        android:text="|"
                        android:textColor="@color/black"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/checkout_deli_addr_txt_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lato"
                        android:paddingVertical="2dp"
                        android:text="0975 446 346"
                        android:textColor="@color/black"
                        android:textSize="15dp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/checkout_deli_addr_txt_detail_ward"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/checkout_group_name_phone"
                    android:layout_marginLeft="28dp"
                    android:fontFamily="@font/lato"
                    android:paddingVertical="2dp"
                    android:text="32 đường số 10, khu phố 3"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/checkout_deli_addr_txt_district_province"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/checkout_deli_addr_txt_detail_ward"
                    android:layout_marginLeft="28dp"
                    android:fontFamily="@font/lato"
                    android:paddingVertical="2dp"
                    android:text="Linh Trung, Thủ Đức, TP Hồ Chí Minh"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="12dp"
                android:background="#E0E0E0" />

<!--            Listview here-->
            <ListView
                android:id="@+id/listview_checkout"
                android:layout_width="match_parent"
                android:layout_height="360dp"
                android:divider="@null"
                android:nestedScrollingEnabled="true"
                tools:listitem="@layout/cart_item"
                />


            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="12dp"
                android:background="#E0E0E0" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TOTAL"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/lato"
                    android:layout_centerVertical="true"
                    />

                <TextView
                    android:id="@+id/checkout_total_txt_discount_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textAlignment="textEnd"
                    android:text="$600"
                    android:textColor="@color/pri_col"
                    android:textSize="24dp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/checkout_total_txt_regular_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/checkout_total_txt_discount_price"
                    android:textAlignment="textEnd"
                    android:text="$702"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/strikethrough_foreground"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="32dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_radius_linear_bg_xanh"
                android:padding="12dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_toLeftOf="@+id/checkout_dvd"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_right_arrow" />

                <TextView
                    android:id="@+id/checkout_deli_method_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_fast_delivery"
                    android:drawablePadding="6dp"
                    android:fontFamily="@font/lato"
                    android:text="Delivery method"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold" />



                <TextView
                    android:id="@+id/checkout_deli_method_txt_method"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/checkout_deli_method_title"
                    android:layout_marginLeft="28dp"
                    android:fontFamily="@font/lato"
                    android:paddingVertical="2dp"
                    android:text="Giao hàng nhanh"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/checkout_deli_method_txt_date_rev"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/checkout_deli_method_txt_method"
                    android:layout_marginLeft="28dp"
                    android:fontFamily="@font/lato"
                    android:paddingVertical="2dp"
                    android:text="Nhận hàng vào 01/05 - 10/05"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

                <View
                    android:id="@+id/checkout_dvd"
                    android:layout_width="1dp"
                    android:layout_height="60dp"
                    android:layout_centerVertical="true"
                    android:background="@color/black"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="60dp"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:id="@+id/checkout_deli_method_regular_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$20"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/lato"
                        android:background="@drawable/strikethrough_foreground"
                        android:layout_marginBottom="6dp"
                        />

                    <TextView
                        android:id="@+id/checkout_deli_method_discount_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$10"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:fontFamily="@font/lato"
                        />

                </LinearLayout>

            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_radius_linear_bg_hong"
                android:padding="12dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_right_arrow" />

                <TextView
                    android:id="@+id/checkout_deli_voucher_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_voucher"
                    android:drawablePadding="6dp"
                    android:fontFamily="@font/lato"
                    android:text="Voucher"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold" />



                <TextView
                    android:id="@+id/checkout_deli_voucher_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/checkout_deli_voucher_title"
                    android:layout_marginLeft="28dp"
                    android:fontFamily="@font/lato"
                    android:paddingVertical="2dp"
                    android:text="Giảm giá 10% cho đơn hàng từ $400"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/checkout_deli_addr_voucher_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/checkout_deli_voucher_name"
                    android:layout_marginLeft="28dp"
                    android:fontFamily="@font/lato"
                    android:paddingVertical="2dp"
                    android:text="Mức giảm 10%"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_radius_linear"
                android:padding="12dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_right_arrow" />

                <TextView
                    android:id="@+id/checkout_deli_payment_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_payment"
                    android:drawablePadding="6dp"
                    android:fontFamily="@font/lato"
                    android:text="Payment method"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/checkout_deli_payment_method"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/checkout_deli_payment_title"
                    android:layout_marginLeft="28dp"
                    android:fontFamily="@font/lato"
                    android:paddingVertical="2dp"
                    android:text="Cash"
                    android:textColor="@color/black"
                    android:textSize="15dp" />


            </RelativeLayout>


            <com.google.android.material.button.MaterialButton
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PAY NOW"
                android:textSize="24dp"
                android:textStyle="bold"
                android:padding="10dp"
                android:fontFamily="@font/lato"
                app:cornerRadius="12dp"
                />
        </LinearLayout>


    </ScrollView>

</RelativeLayout>