<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/border_radius_linear8"
        android:paddingHorizontal="20dp"
        android:paddingVertical="12dp"
        >

        <ImageView
            android:id="@+id/icSearch"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center_vertical"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_search" />

        <EditText
            android:id="@+id/admin_grant_permissions_input_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/admin_grant_permissions_btn_clear"
            android:layout_toRightOf="@+id/icSearch"
            android:background="@android:color/transparent"
            android:fontFamily="@font/lato"
            android:hint="Search by email or name ..."
            android:text=""
            android:textColor="@color/black"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/admin_grant_permissions_btn_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:fontFamily="@font/lato_black"
            android:text="Clear"
            android:textColor="@color/black"
            android:textSize="18dp" />



    </RelativeLayout>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/admin_productList_numOfProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:fontFamily="@font/lato"
            android:text="#"
            android:textColor="@color/red"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:fontFamily="@font/lato"
            android:text=" products, "
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/admin_productList_numOfStocks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:fontFamily="@font/lato"
            android:text="#"
            android:textColor="@color/red"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:fontFamily="@font/lato"
            android:gravity="left"
            android:text=" stocks"
            android:textColor="@color/black"
            android:textSize="20dp" />
    </LinearLayout>


    <ListView
        android:id="@+id/admin_productList_productList"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>