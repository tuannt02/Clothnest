<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_admin_productList_View"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="10dp"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp">

        <ImageView
            android:id="@+id/item_admin_productList_productImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitCenter"
            android:src="@drawable/sample" />
    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_admin_productList_productName"
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:layout_marginHorizontal="10dp"
            android:fontFamily="@font/lato"
            android:text="Random text random text random text random text rand"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginHorizontal="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_admin_productList_productID"
                android:layout_width="150dp"
                android:layout_height="20dp"
                android:fontFamily="@font/lato"
                android:text="ID: 1"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/item_admin_productList_productPrice"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:fontFamily="@font/lato"
                android:gravity="right"
                android:text="$ 1500"
                android:textColor="@color/red"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/item_admin_productList_productStock"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:fontFamily="@font/lato"
                android:gravity="right"
                android:text="20"
                android:layout_marginLeft="20dp"
                android:textColor="@color/blue"
                android:textSize="15dp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>