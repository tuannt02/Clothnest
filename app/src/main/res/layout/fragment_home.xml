<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="30dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14sp"
                android:fontFamily="@font/lato_bold"
                android:text="CLOTHEST"
                android:textColor="#FF5722"
                android:textSize="30dp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                app:cardCornerRadius="10dp">

                <ImageView
                    android:id="@+id/btnchat"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/chat" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                app:cardCornerRadius="10dp">

                <ImageView
                    android:id="@+id/btncart"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/cart" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>


        <ImageView
            android:id="@+id/imgPoster"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25sp"
            android:src="@drawable/banner" />

        <TextView
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/lato_bold"
            android:text="NEW ARRIVALS"
            android:textSize="20dp" />
        <include
            android:id="@+id/group_arrival"
            layout="@layout/group_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp" />

        <Button
            android:id="@+id/btnarrival"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="20dp"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/lato_bold"
            android:text="SEE ALL ITEMS"
            android:textColor="?attr/colorControlNormal"
            android:textSize="15dp" />
        <TextView
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/lato_bold"
            android:text="SALES"
            android:textSize="20dp" />

        <include
            android:id="@+id/group_sales"
            layout="@layout/group_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp" />


        <Button
            android:id="@+id/btnsale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="20dp"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/lato_bold"
            android:text="SEE ALL ITEMS"
            android:textColor="?attr/colorControlNormal"
            android:textSize="15dp" />

        <TextView
            android:textColor="#000"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/lato_bold"
            android:text="COLLECTIONS"
            android:textSize="20dp" />

        <HorizontalScrollView
            android:layout_width="366dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:backgroundTint="#fff"
                    android:fontFamily="@font/lato"
                    android:text="WINTER"
                    android:textColor="#000"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:backgroundTint="#fff"
                    android:fontFamily="@font/lato"
                    android:text="LINE"
                    android:textColor="#000"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:backgroundTint="#fff"
                    android:fontFamily="@font/lato"
                    android:text="UT"
                    android:textColor="#000"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:backgroundTint="#fff"
                    android:fontFamily="@font/lato"
                    android:text="UNISEX"
                    android:textColor="#000"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:backgroundTint="#fff"
                    android:fontFamily="@font/lato"
                    android:text="UV PROTECTION"
                    android:textColor="#000"
                    />
            </LinearLayout>
        </HorizontalScrollView>
        <TextView
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_margin="20dp"
            android:fontFamily="@font/lato"
            android:textSize="20dp"
            android:text="IMPORTANT NOTICE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textStyle="bold"
            android:layout_marginLeft="30dp"
            android:fontFamily="@font/lato"
            android:textSize="15dp"
            android:text=". Due to COVID-19 area is limited until further notice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:gravity="center"
            android:layout_margin="30dp"
            android:textStyle="bold"
            android:layout_marginLeft="30dp"
            android:fontFamily="@font/lato"
            android:textSize="15dp"
            android:text=". All prices are subject to 10% VAT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <androidx.cardview.widget.CardView
            android:layout_margin="20dp"
            android:layout_gravity="center"
            app:cardCornerRadius="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/storelocator" />
        </androidx.cardview.widget.CardView>
        <include
            android:id="@+id/group_arrival"
            layout="@layout/group_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/group_sales"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp" />
    </LinearLayout>
</ScrollView>